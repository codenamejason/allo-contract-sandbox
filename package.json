{
  "name": "hardhat-foundry-template",
  "version": "1.0.0",
  "description": "The harmony between Foundry and Hardhat.",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "hardhat test",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "export-abi": "hardhat export-abi",
    "clear-abi": "hardhat clear-abi",
    "lint:sol": "hardhat check",
    "size": "npx hardhat size-contracts",
    "lint": "eslint ./**/*.ts",
    "force-import": "npx hardhat run scripts/forceImport.ts --network",
    "//allo-settings-deploy-scripts": "echo '//-- Allo Settings deploy Script --//'",
    "deploy-allo-settings": "npx hardhat run scripts/settings/deployAlloSettings.ts --network",
    "set-protocol-fee": "npx hardhat run scripts/settings/setProtocolFeeDetails.ts --network",
    "// project-registry-deploy-scripts": "echo '//-- Project Registry deploy Script --//'",
    "deploy-builder": "yarn hardhat run scripts/projectRegistry/deployProjectRegistry.ts --network",
    "upgrade-project-registry": "yarn hardhat run scripts/projectRegistry/upgradeProjectRegistry.ts --network",
    "// progam-deploy-scripts": "echo '//-- Program deploy Script --//'",
    "deploy-program-factory": "npx hardhat run scripts/program/deployProgramFactory.ts --network",
    "deploy-program-implementation": "npx hardhat run scripts/program/deployProgramImplementation.ts --network",
    "link-program-implementation": "npx hardhat run scripts/program/linkProgramImplementation.ts --network",
    "create-program": "npx hardhat run scripts/program/createProgram.ts --network",
    "upgrade-program-factory": "npx hardhat run scripts/program/upgradeProgramFactory.ts --network",
    "// round-deploy-scripts": "echo '//-- Round deploy Script --//'",
    "deploy-round-implementation": "npx hardhat run scripts/round/deployRoundImplementation.ts --network",
    "deploy-round-factory": "npx hardhat run scripts/round/deployRoundFactory.ts --network",
    "link-round-implementation": "npx hardhat run scripts/round/linkRoundImplementation.ts --network",
    "link-allo-settings": "npx hardhat run scripts/round/linkAlloSettings.ts --network",
    "create-round": "npx hardhat run scripts/round/createRound.ts --network",
    "apply-to-round": "npx hardhat run scripts/round/applyToRound.ts --network",
    "update-project-metaptr": "npx hardhat run scripts/round/updateProjectMetaPtr.ts --network",
    "upgrade-round-factory": "npx hardhat run scripts/round/upgradeRoundFactory.ts --network",
    "// vote-deploy-scripts": "echo '//-- Voting deploy Script --//'",
    "deploy-qf-factory": "npx hardhat run scripts/votingStrategy/quadraticFunding/deployQFVotingStrategyFactory.ts --network",
    "deploy-qf-implementation": "npx hardhat run scripts/votingStrategy/quadraticFunding/deployQFVotingStrategyImplementation.ts --network",
    "link-qf-implementation": "npx hardhat run scripts/votingStrategy/quadraticFunding/linkQFVotingStrategyImplementation.ts --network",
    "create-qf-contract": "npx hardhat run scripts/votingStrategy/quadraticFunding/createQFVotingStrategy.ts --network",
    "cast-qf-vote": "npx hardhat run scripts/votingStrategy/quadraticFunding/castQFVoteViaRound.ts --network",
    "upgrade-qf-factory": "npx hardhat run scripts/votingStrategy/quadraticFunding/upgradeQFFactory.ts --network",
    "// payout-deploy-scripts": "echo '//-- Payout deploy Script --//'",
    "deploy-merkle-factory": "npx hardhat run scripts/payoutStrategy/merkle/deployMerklePayoutStrategyFactory.ts --network",
    "deploy-merkle-implementation": "npx hardhat run scripts/payoutStrategy/merkle/deployMerklePayoutStrategyImplementation.ts --network",
    "link-merkle-implementation": "npx hardhat run scripts/payoutStrategy/merkle/linkMerklePayoutStrategyImplementation.ts --network",
    "create-merkle-contract": "npx hardhat run scripts/payoutStrategy/merkle/createMerklePayoutStrategy.ts --network",
    "upgrade-merkle-factory": "npx hardhat run scripts/payoutStrategy/merkle/upgradeMerkleFactory.ts --network"
  },
  "author": "Devan Non <devanon@chainstride.capital>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.35",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.6.6",
    "hardhat": "^2.9.5",
    "hardhat-preprocessor": "^0.1.4",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "@openzeppelin/hardhat-upgrades": "^1.26.0",
    "@openzeppelin/merkle-tree": "^1.0.4",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "dotenv": "^16.0.3",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2"
  }
}
